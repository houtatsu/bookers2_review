<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4>User info</h4>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr><th>name</th><td><%= @user.name %></td></tr>
        <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
      </table>
      <div>
        <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" %>
      </div>
      
      <h4 class="mt-3">New book</h4>
      <%= form_with model: @book, url: books_path, method: :post do |f| %>
        <div class="form-group">
          <label>Title</label><br>
          <%= f.text_field :title, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label>Opinion</label><br>
          <%= f.text_area :body, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h4>Books</h4>
      <table class="table">
        <thead>
          <tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= image_tag @user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>